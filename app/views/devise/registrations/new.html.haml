%h2 Sign up

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!

  = f.input :phone_number, autofocus: true

  = f.input :password, hint: user_password_input_hint(@minimum_password_length, @validatable)
  = f.input :password, label: "Confirm Password"

  = f.submit "Sign up"

= render "devise/shared/links"
